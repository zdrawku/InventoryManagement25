<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!-- Primary public feed -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    <!-- Keep the VS offline packages feed in case some packages are available there -->
    <add key="Microsoft Visual Studio Offline Packages" value="C:\\Program Files (x86)\\Microsoft SDKs\\NuGetPackages\\" />
  </packageSources>

  <!-- Package source mapping: map the packages referenced by this project to nuget.org so restore will consider it -->
  <packageSourceMapping>
    <!-- Consider nuget.org for all package IDs so public packages are resolved properly -->
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>

    <!-- Keep the offline source as a fallback for any packages that might exist there -->
    <packageSource key="Microsoft Visual Studio Offline Packages">
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
</configuration>
